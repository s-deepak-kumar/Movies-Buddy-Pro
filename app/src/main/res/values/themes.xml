<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesBuddyPro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_icon_color</item>
        <item name="colorPrimaryVariant">@color/primary_background_color</item>
        <item name="colorOnPrimary">@color/secondary_icon_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_icon_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/righteous</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ProgressBarColor">
        <item name="colorAccent">@color/secondary_icon_color</item> <!-- Whatever color you want-->
    </style>

    <style name="ProgressBarColorWhite">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="AppTitle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_icon_color</item>
    </style>

    <style name="TabLayoutTextStyleBig">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TabLayoutTextStyleSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_background_color</item>
        <item name="colorPrimary">@color/primary_background_color</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--<item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <style name="ExpandedCollapsingActivityTitle" parent="android:Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppRatingBar">
        <item name="android:progressTint">@color/secondary_icon_color</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>
</resources>