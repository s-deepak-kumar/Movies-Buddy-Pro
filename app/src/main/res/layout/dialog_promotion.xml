<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary_background_color"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/appFeatureImageView"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/animated_poster"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_logo_string" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_overlay_bk"/>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/appLogoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/movies_buddy_pro_icon"
                android:contentDescription="@string/app_logo_string" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movies Buddy Pro"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/appDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When a young systems engineer blows the whistle on a dangerous technology, Charlie's Angels are called into action, putting their lives on the line to protect us all."
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:maxLines="4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom|center"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/installNowLayoutButton"
            android:background="@drawable/install_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INSTALL NOW"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:gravity="center"
            android:background="@drawable/transparent_bg_3"
            android:focusable="true"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>